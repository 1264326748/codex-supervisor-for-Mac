{
  "name": "codex-supervisor-desktop",
  "version": "0.1.0",
  "private": true,
  "description": "本地主管分派桌面应用",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev:renderer": "vite --config renderer/vite.config.js",
    "dev:desktop": "VITE_DEV_SERVER_URL=http://127.0.0.1:5178 electron electron/main.js",
    "dev": "concurrently -k \"npm run dev:renderer\" \"wait-on tcp:5178 && npm run dev:desktop\"",
    "build:renderer": "vite build --config renderer/vite.config.js",
    "build": "npm run build:renderer",
    "test": "node --test tests/*.test.mjs",
    "start": "electron electron/main.js",
    "app:launcher": "bash scripts/build-local-launcher.sh"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "vite": "^6.0.0",
    "wait-on": "^8.0.1"
  }
}
